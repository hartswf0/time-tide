    <script>
        // Global variables
        let cameraStream = null;
        let videoElement = null;
        let slitCanvas = null;
        let slitCtx = null;
        let sedimentCanvas = null;
        let sedimentCtx = null;
        let slitPosition = 0;
        let slitWidth = 1;
        let slitSpeed = 1;
        let highlightCurrent = true;
        let showWavePattern = false;
        let tidalFactor = 50;
        let waveEnergy = 50;
        let erosionThreshold = 50;
        let compactionRate = 50;
        let organicFactor = 50;
        let layeringMode = 'standard';
        let blendMode = 'normal';
        let colorShift = 0;
        let layerOpacity = 100;
        let layerSpacing = 0;
        let layerOffset = 0;
        let layerDistortion = 0;
        let layerBlur = 0;
        
        // HYPERCLAY experimental controls
        let temporalWarp = 0;
        let dimensionalFold = 0;
        let quantumNoise = 0;
        let realityMode = 'consensus';
        let feedbackLoop = 0;
        
        // Animation loop
        function animate() {
            // Clear the sediment canvas
            sedimentCtx.clearRect(0, 0, sedimentCanvas.width, sedimentCanvas.height);
            
            // Render the sediment layers
            sedimentProcessor.renderLayers(sedimentCtx, sedimentCanvas.width, sedimentCanvas.height, {
                showWireframe: false,
                highlightCurrent,
                tidalFactor,
                waveEnergy,
                showWavePattern,
                layeringMode,
                blendMode,
                layerSpacing,
                layerOffset,
                layerDistortion,
                layerBlur,
                // Add HYPERCLAY parameters
                temporalWarp,
                dimensionalFold,
                quantumNoise,
                realityMode,
                feedbackLoop
            });
            
            // Update stats
            document.getElementById('layerCount').textContent = sedimentProcessor.layers.length;
            if (sedimentProcessor.layers.length > 0) {
                const currentLayer = sedimentProcessor.layers[sedimentProcessor.currentLayerIndex];
                document.getElementById('layerAge').textContent = Math.floor((Date.now() - currentLayer.timestamp) / 1000);
                document.getElementById('layerMotion').textContent = Math.floor(currentLayer.motion);
                document.getElementById('frameRate').textContent = Math.floor(frameRate * 10) / 10;
            }
            
            // Request next frame
            requestAnimationFrame(animate);
        }
        
        // Initialize the application
        document.addEventListener('DOMContentLoaded', () => {
            // Initialize camera
            initCamera();
            
            // Initialize preset system
            updatePresetSelect();
            
            // Set up event listeners for preset system
            document.getElementById('presetSelect').addEventListener('change', (e) => {
                if (e.target.value) {
                    loadPreset(e.target.value);
                }
            });
            
            document.getElementById('savePresetBtn').addEventListener('click', saveCurrentPreset);
            document.getElementById('exportPresetsBtn').addEventListener('click', exportPresets);
            document.getElementById('importPresetsBtn').addEventListener('click', importPresets);
            
            // Set up fullscreen toggle
            document.getElementById('fullscreenToggle').addEventListener('click', toggleFullscreen);
            
            // Set up control event listeners
            document.getElementById('slitWidth').addEventListener('input', (e) => {
                slitWidth = parseInt(e.target.value);
                document.getElementById('slitWidthValue').textContent = slitWidth;
            });
            
            document.getElementById('scanSpeed').addEventListener('input', (e) => {
                slitSpeed = parseInt(e.target.value);
                document.getElementById('scanSpeedValue').textContent = slitSpeed;
            });
            
            document.getElementById('highlightCurrentCheckbox').addEventListener('change', (e) => {
                highlightCurrent = e.target.checked;
            });
            
            document.getElementById('tidalFactor').addEventListener('input', (e) => {
                tidalFactor = parseInt(e.target.value);
                document.getElementById('tidalFactorValue').textContent = tidalFactor;
            });
            
            document.getElementById('waveEnergy').addEventListener('input', (e) => {
                waveEnergy = parseInt(e.target.value);
                document.getElementById('waveEnergyValue').textContent = waveEnergy;
            });
            
            document.getElementById('erosionThreshold').addEventListener('input', (e) => {
                erosionThreshold = parseInt(e.target.value);
                document.getElementById('erosionThresholdValue').textContent = erosionThreshold;
            });
            
            document.getElementById('compactionRate').addEventListener('input', (e) => {
                compactionRate = parseInt(e.target.value);
                document.getElementById('compactionRateValue').textContent = compactionRate;
            });
            
            document.getElementById('organicFactor').addEventListener('input', (e) => {
                organicFactor = parseInt(e.target.value);
                document.getElementById('organicFactorValue').textContent = organicFactor;
            });
            
            document.getElementById('layeringMode').addEventListener('change', (e) => {
                layeringMode = e.target.value;
                document.getElementById('layeringModeDisplay').textContent = layeringMode.substring(0, 4);
            });
            
            document.getElementById('blendMode').addEventListener('change', (e) => {
                blendMode = e.target.value;
                document.getElementById('blendModeDisplay').textContent = blendMode.substring(0, 4);
            });
            
            document.getElementById('colorShift').addEventListener('input', (e) => {
                colorShift = parseInt(e.target.value);
                document.getElementById('colorShiftValue').textContent = colorShift;
                document.getElementById('colorShiftDisplay').textContent = colorShift;
            });
            
            document.getElementById('layerOpacity').addEventListener('input', (e) => {
                layerOpacity = parseInt(e.target.value);
                document.getElementById('layerOpacityValue').textContent = layerOpacity;
            });
            
            document.getElementById('layerSpacing').addEventListener('input', (e) => {
                layerSpacing = parseInt(e.target.value);
                document.getElementById('layerSpacingValue').textContent = layerSpacing;
            });
            
            document.getElementById('layerOffset').addEventListener('input', (e) => {
                layerOffset = parseInt(e.target.value);
                document.getElementById('layerOffsetValue').textContent = layerOffset;
            });
            
            document.getElementById('layerDistortion').addEventListener('input', (e) => {
                layerDistortion = parseInt(e.target.value);
                document.getElementById('layerDistortionValue').textContent = layerDistortion;
            });
            
            document.getElementById('layerBlur').addEventListener('input', (e) => {
                layerBlur = parseFloat(e.target.value);
                document.getElementById('layerBlurValue').textContent = layerBlur;
            });
            
            document.getElementById('wavePatternToggle').addEventListener('change', (e) => {
                showWavePattern = e.target.checked;
            });
            
            // HYPERCLAY experimental controls
            document.getElementById('temporalWarp').addEventListener('input', (e) => {
                temporalWarp = parseInt(e.target.value);
                document.getElementById('temporalWarpValue').textContent = temporalWarp;
            });
            
            document.getElementById('dimensionalFold').addEventListener('input', (e) => {
                dimensionalFold = parseInt(e.target.value);
                document.getElementById('dimensionalFoldValue').textContent = dimensionalFold;
            });
            
            document.getElementById('quantumNoise').addEventListener('input', (e) => {
                quantumNoise = parseInt(e.target.value);
                document.getElementById('quantumNoiseValue').textContent = quantumNoise;
            });
            
            document.getElementById('realityMode').addEventListener('change', (e) => {
                realityMode = e.target.value;
            });
            
            document.getElementById('feedbackLoop').addEventListener('input', (e) => {
                feedbackLoop = parseInt(e.target.value);
                document.getElementById('feedbackLoopValue').textContent = feedbackLoop;
            });
        });
    </script>
    <script src="adobe-killer-processor.js"></script>
    <script src="adobe-killer.js"></script>
